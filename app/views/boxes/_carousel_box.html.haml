- if carousel_box.content.respond_to? :event
  - url = url_for [carousel_box.content.event, carousel_box.content]
- else
  - url = url_for [carousel_box.content]

.item{class: "#{'active' if carousel_box.carousel_position == 1}"}
  = link_to url do
    = image_tag carousel_box.picture.carousel_image
  = link_to url do
    .carousel-caption
      %h4= carousel_box.second_line
      %p
        - if carousel_box.first_line_for_carousel.respond_to? :time
          = I18n.l carousel_box.first_line_for_carousel, format: :short
        - else
          = carousel_box.first_line_for_carousel
