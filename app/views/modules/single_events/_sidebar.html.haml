- color = @single_event.category.try(:color)
.single-event-sidebar
  .single-event-event-teaser
    .event.event-preview{ style: "border-top: 3px solid #{color}"}
      - if @single_event.event.picture.present?
        = link_to @single_event.event do
          = image_tag(@single_event.event.picture.box_image.url, class: 'event-image')

      .event-text
        = @single_event.event.description
        %p= link_to "(weiterlesen)", @single_event.event

  .blog_advertisement
    Werbung
    = link_to(image_tag(@advertisement.picture.advertisement_image.rectangle.url), @advertisement.link)

  .event-external-links
    = link_to image_tag("blog-twitter.png"), "http://twitter.com/nerdhub_cgn", class: "blog_sidebar_twitter"
    = link_to image_tag("blog-facebook.png"), "http://www.facebook.com/nerdhubcgn", class: "blog_sidebar_facebook"
    = link_to image_tag("blog-rss.png"), "/calendar/rss_feed", class: "blog_sidebar_rss"

  .blog_nerdletter
    %h2 Nerdletter
    %form
      %input{type: "text", placeholder: "E-Mail-Adresse"}
      %input{type: "image", src: asset_path("blog-nerdletter.png")}
